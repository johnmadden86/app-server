{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "import"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true, "optionalDependencies": false, "peerDependencies": false}],
    "max-len": [2, 120],
    "no-console": "off",
    "no-param-reassign": [2, {
      "props": false
    }],
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      "error", {
        "bracketSpacing": true,
        "singleQuote": true
      }
    ]
  }
}
